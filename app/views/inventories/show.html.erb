<div class="table">
  <%= button_to 'ADD NEW FOOD', new_food_path, method: :get, class: 'btn btn-primary float-end my-3' %>
  <table class="table table-bordered">
    <tr>
      <th>Food</th>
      <th>Quantity</th>
      <th>Actions</th>
    </tr>
    <% @inventory.foods.each do |food| %>
      <tr>
        <td><%=food.name%></td>
        <td><%=food.quantity%></td>
        <td>
          <%= button_to "Delete", food_path(food.id), html: {'data-turbo' => "false"}, :method => :delete, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </table>
</div>