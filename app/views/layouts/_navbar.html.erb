<nav class="d-flex px-8 py-4 justify-content-between items-center gap-12 border-b-2 border-sky-700 bg-sky-300">

  <div class="left-side d-flex gap-3 items-center w-fit">
    <%=bootstrap_form_with url: root_path, method: :get do %>
      <button class="text-sky-600 btn btn-link">Home</button>
    <% end %>
    <% if current_user.present? %>
      <%=bootstrap_form_with url: recipes_path, method: :get do %>
        <button class="text-sky-600 btn btn-link">Recipes</button>
      <% end %>
      <%=bootstrap_form_with url: foods_path, method: :get do %>
        <button class="text-sky-600 btn btn-link">Foods</button>
      <% end %>
      <%=bootstrap_form_with url: inventories_path, method: :get do %>
        <button class="text-sky-600 btn btn-link">Inventories</button>
      <% end %>
    <% end %>
  </div>
  <div class="righ-side d-flex gap-3 items-center w-fit">
    <% unless current_user.present? %>
      <%=bootstrap_form_with model: User.new, url: new_user_session_path, method: :get do %>
        <button class="text-sky-600 btn btn-link">Sign in</button>
      <% end %>
      <%=bootstrap_form_with model: User.new, url: new_user_registration_path, method: :get do %>
        <button class="text-sky-600 btn btn-link">Sign up</button>
      <% end %>
    <% end %>
    <% if current_user.present? %>
      <span class="text-red-600 btn">
        <%= current_user.email %>
      </span>
      <%=bootstrap_form_with model: User.new, url: destroy_user_session_path, method: :delete do %> 
        <button class="text-red-600 btn btn-link">Sign out</button>
      <% end %>
    <% end %>
  </div>
</nav>