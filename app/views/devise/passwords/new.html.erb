<h2 class="text-center">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <div class="d-flex flex-column align-items-center">
    <%= render "devise/shared/error_messages", resource: resource %>

  <div class= "d-flex flex-column align-items-center w-75 mb-3"> 
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control w-75 mb-4", placeholder: "Email"%>

    <%= f.submit "Send me reset password instructions", class: "form-control w-75 btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>